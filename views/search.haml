-movies = locals[:movies]
-actors = locals[:actors]

.well.well-lg
  %div{:role => "tabpanel"}
    / Nav tabs
    %ul.nav.nav-tabs#search-tabs{:role => "tablist"}
      %li.active{:role => "presentation"}
        %a{"aria-controls" => "movies", "data-toggle" => "tab", :href => "#movies-tab-pane", :role => "tab"} Movies
      %li{:role => "presentation"}
        %a{"aria-controls" => "actors", "data-toggle" => "tab", :href => "#people-tab-pane", :role => "tab"} People
    / Tab panes
    .tab-content
      #movies-tab-pane.tab-pane.fade.in.active{:role => "tabpanel"}
        / Movie search results go here
        %h4 Movie Results
        %br
        %ul.list-group
          / Dynamically list movie results here
          -if movies.length == 0
            %h5 No movies found
          -else
            -movies.each do |movie|
              %li.list-group-item #{movie.title}

      #people-tab-pane.tab-pane.fade{:role => "tabpanel"}
        / People search results go here
        %h4 Person Results
        %br
        %ul.list-group
          / Dynamically list person results here
          -if actors.length == 0
            %h5 No people found
          -else
            -actors.each do |actor|
              %li.list-group-item #{actor.name}


:javascript

  // Javascript for changing between tabs
  $(document).ready(function(){ 
      $("#search-tabs li:eq(1) a").tab('show');
  });

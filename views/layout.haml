!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge, chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", :name => "viewport"}/
    %link{:href => "", :rel => "shortcut icon"}/
    %title Alert Logic Movie DB Search
    / Local CSS
    %link{:href => "/css/site.css", :rel => "stylesheet"}/
    / Bootstrap core CSS
    %link{:href => "/css/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "/css/bootstrap-theme.min.css", :rel => "stylesheet"}/

  %body
    %nav.navbar.navbar-default.navbar-inverse
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"} tMDB Movie Search
        / Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{:href => "#"}
                Link
                %span.sr-only (current)
            %li
              %a{:href => "#"} Movies
            %li
              %a{:href => "#"} People
          %form.navbar-form.navbar-right{:role => "search", :action => "/search", :method => "post", :enctype => "multipart/form-data"}
            .form-group
              %input.form-control#nav-search-bar{:placeholder => "Search", :name => "search_string", :type => "text"}
            %button.btn.btn-default{:type => "submit"} Submit
          /%ul.nav.navbar-nav.navbar-right

        / /.navbar-collapse
      / /.container-fluid


    .mainWrapper
      .container
        .row
          .mainThing.col-md-12.col-xs-12
            =yield

    / jQuery (necessary for Bootstrap's JavaScript plugins)
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"}

    / compiled and minified Bootstrap JavaScript
    %script{:src => "/js/bootstrap.min.js"}
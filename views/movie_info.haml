-movie = locals[:movie]
-cast = locals[:cast]
-similar_movies = locals[:similar_movies]
-trailers = locals[:trailers]
-images = locals[:images]

-pp movie
-pp cast
-pp trailers
-pp images

.well.well-sm
  .row
    .col-md-3.col-sm-3.col-xs-12
      %img{ :src => "http://image.tmdb.org/t/p/w154/#{movie['poster_path']}"}
      %br
      %br
      %h4 Movie Facts
      Release Date: #{movie['release_date']}
      %br
      Budget:  $#{movie['budget']}
      %br
      Revenue: $#{movie['revenue']}
      %br
      Runtime: #{movie['runtime']} minutes
      %br
      Website:
      %a{:href => "#{movie['homepage']}"}Link

    .col-md-9.col-sm-9
      %h2 #{movie['title']}
      %br
      %p #{movie['overview']}
      %br
      %h4 Cast:
      %br
      -if cast.length == 0
        %h5 No people found
      -else
        %table.table.table-hover
          %tbody
          -cast.each do |actor|
            %tr
              %td{:style => "width=10%"}
                %a{:href => "/person/#{actor['id']}"}
                  %img#cast-image{ :src => "http://image.tmdb.org/t/p/w154/#{actor['profile_path']}"}
              %td
                %a{:href => "/person/#{actor['id']}"} #{actor['name']}
                as #{actor['character']}
                %br